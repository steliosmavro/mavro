{
    "extends": "@repo/typescript-config/react-library.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],

            // The following is needed only for the shadcn cli to move the components added
            // by the `add` command from the app to the ui package.
            "@repo/ui/*": ["./src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
